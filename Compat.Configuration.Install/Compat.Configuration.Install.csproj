<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net8.0-windows;netstandard2.1</TargetFrameworks>
    <AssemblyName>Compat.System.Configuration.Install</AssemblyName>
    <AssemblyTitle>Compat.System.Configuration.Install</AssemblyTitle>
    <PackageId>Compat.System.Configuration.Install</PackageId>
    <LangVersion>7.2</LangVersion>
    <RootNamespace>
    </RootNamespace>
    <Version>1.0.5</Version>
    <Description>Porting of System.Configuration.Install for .NET Core. (.NET 4.0 version)</Description>
    <Product>Compat.System.Configuration.Install</Product>
    <PackageLicenseFile>license.md</PackageLicenseFile>
    <Copyright>Copyright (C) 2018 Alexander Chermyanin, Christian Klutz</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>Install, Component</PackageTags>
    <PackageProjectUrl>https://github.com/JonnyVR1/Compat.Configuration.Install</PackageProjectUrl>
    <RepositoryUrl>https://github.com/JonnyVR1/Compat.Configuration.Install</RepositoryUrl>
    <PackageReleaseNotes>
      Using the official System.Diagnostic classes. Thanks Gábor Zavarkó.
      For from https://github.com/flamencist/Core.Compat.Configuration.Install.
      Renamed to "Compat.System.Configuration.Install".
      Updated to .NET 8.0.
    </PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\license.md" Pack="true" PackagePath="$(PackageLicenseFile)"/>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Compat.Runtime.Serialization" Version="1.0.2" />
    <PackageReference Include="System.Diagnostics.EventLog" Version="6.0.0" />
    <PackageReference Include="System.Diagnostics.PerformanceCounter" Version="6.0.0" />
    <PackageReference Include="Nerdbank.GitVersioning" Version="3.4.244">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>
